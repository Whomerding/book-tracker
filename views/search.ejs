<%- include ("partials/header.ejs") %>

    <h2>Search Results</h2>
    <%= query %>

        <ul class="library-list">
            <% results.forEach(function(books) { %>
                <form class="book-card" action="/add" method="post">
                    <li class="card" style="text-align: center;">
                        <input type="hidden" name="title" value="<%= books.title %>">
                        <input type="hidden" name="author" value="<%= books.author %>">
                        <input type="hidden" name="rating" value="<%= books.rating %>">
                        <input type="hidden" name="image" value="<%= books.image %>">
                        <input type="hidden" name="api_book_id" value="<%=books.id%>">

                        <img class="book-cover" src="<%= books.image %>" alt="<%= books.title %>">
                        <button class="add-to-library" type="submit">Add to Library</button>


                    </li>

                </form>

                <% }); %>
        </ul>
        <%- include ("partials/footer.ejs") %>